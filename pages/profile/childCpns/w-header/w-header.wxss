.header{
  display: flex;
  position: relative;
  background: #ff5777;
  height: 170rpx;
  padding: 12rpx 30rpx;
  color: #fff;
}
.avatar image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background:#f2f2f2;
  /* 垂直居中 */
  vertical-align: middle；
}
.login-info{
  vertical-align: middle;
  margin-left: 30rpx;
}
.login-info .login{
  font-size: 36rpx;
  margin-top: 18rpx;
}

.phone{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.phone image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
    position: relative;
    bottom: 4rpx;
}
.arrow{
  position: absolute;
  right: 30rpx; 

  margin-top: 30rpx;
}
.arrow image{
  width: 60rpx;
  height: 60rpx;

}

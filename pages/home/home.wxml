<!--pages/home/home.wxml-->
<!-- 展示轮播图 -->
<w-swiper list="{{banners}}" />
<!-- 展示推荐 -->
<w-recommend list="{{recommends}}"/>
<!-- 展示本周流行 -->
<view class="week-popular">
    <text >本周推荐</text>
</view>

 <view class='grid' wx:for='{{dataList}}' wx:if='{{index%4 === 0}}' wx:key="index">
  <image wx:for='{{[dataList[index], dataList[index+1],dataList[index+2],dataList[index+3]]}}'
         wx:for-item='dataItem' src="{{dataItem.image}}">
      </image>
      <view>
      <text wx:for='{{[dataList[index], dataList[index+1],dataList[index+2],dataList[index+3]]}}'
         wx:for-item='dataItem' >
          {{dataItem.title}}
      </text>
      </view>
 </view> 


/* pages/detail/childCpns/w-shopinfo/w-shopinfo.wxss */

.shop-info{
 margin-top: 30rpx;

}

.shop-info-title{
  display: flex;
}
.shop-info-title image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 46rpx;
  border: 1px solid rgba(200,200,200,.6);
  vertical-align: middle;
}
.shop-info-title text{
  margin-left: 18rpx;
  position: relative;
  top: 10rpx;
}

.shop-sell-info{
  display: flex;
  margin: 40rpx 0;
}

.sell-item{
  flex: 1;
  text-align: center;
 
}
.count-info {
  display: flex;
  margin: 20rpx 0;
  border-right: 1px solid rgba(200,200,200,.6);
}

.count-item{
  flex: 1;
  text-align: center;
}

.count-item .count {
  font-size: 40rpx;
}

.count-item .text {
  font-size: 28rpx;
  margin-top: 16rpx;
}

.grade-info {
  font-size: 28rpx;
  padding: 0 20rpx;
}
.grade-row {
  display: flex;
}

.grade-row .item {
  margin-top: 8rpx;
}

.grade-row .name {
  width: 200rpx;
}

.grade-row .score {
  flex: 1;
}

.grade-row .better {
  flex: 1;
}

.good {
  color: #ff5777;
}

.less {
  color: #5ea732;
}

.entrance {
  text-align: center;
}

.entrance button {
  padding: 8rpx 100rpx;
}
.entrance button::after {
  border: none;
}